{
  "name": "notificationapi/notificationapi-laravel-server-sdk",
  "description": "Package to use notificationapi.com with laravel",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Nairan Omura",
      "email": "nairanomura@hotmail.com"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "^8.1",
    "laravel/framework": "^9.0|^10.0|^11.0",
    "notificationapi/notificationapi-php-server-sdk": "master"
  },
  "require-dev": {
    "laravel/pint": "^1.13",
    "pheromone/phpcs-security-audit": "^2.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "extra": {
    "laravel": {
      "providers": [
        "NotificationAPI\\NotificationApiServiceProvider"
      ]
    }
  },
  "autoload" : {
    "psr-4" : {
      "NotificationAPI\\" :  "src/"
    }
  },
  "scripts": {
    "check-style": "pint --test",
    "fix-style": "pint",
    "check-security": "./vendor/bin/phpcs --extensions=php,inc,lib,module,info --standard=./vendor/pheromone/phpcs-security-audit/example_base_ruleset.xml ./src/ || true",
    "test": [
      "@check-style",
      "@check-security"
    ]
  }
}
